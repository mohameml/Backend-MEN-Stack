{
  "extends": ["airbnb", "prettier", "plugin:node/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "off",
    "spaced-comment": "off",
    "no-console": "warn",
    "consistent-return": "off",
    "func-names": "off",
    "object-shorthand": "off",
    "no-process-exit": "off",
    "no-param-reassign": "off",
    "no-return-await": "off",
    "no-underscore-dangle": "off",
    "class-methods-use-this": "off",
    "prefer-destructuring": ["error", { "object": true, "array": false }],
    "no-unused-vars": ["warn", { "argsIgnorePattern": "req|res|next|val" }],
    "no-undef": "error", // Erreur si une variable ou une propriété est indéfinie
    "dot-notation": ["error", { "allowKeywords": true }] , // Recommande d'accéder aux propriétés avec le point (.)
    "node/no-unsupported-features/es-syntax": ["wran", { "version": ">=8.3.0" }]
  }
}
